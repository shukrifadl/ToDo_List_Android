<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable name="task"
                  type="com.example.android.todo.db.Task"/>

        <variable name="viewModel"
                  type="com.example.android.todo.viewmodels.TaskViewModel"/>
    
    </data>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragments.TaskDetailsFragment">
    
        <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewNew"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="@dimen/small_margin"
                app:cardCornerRadius="@dimen/mis_radius"
                android:layout_margin="@dimen/mid_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/mid_margin">
                <TextView
                        android:id="@+id/etNoteTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textSize="@dimen/text_size"
                        android:textAlignment="center"
                        android:text="@={task.title}"
                        android:textStyle="bold"
                        android:ems="10"/>
                <TextView
                        android:id="@+id/status"
                        
                        android:text="@={task.getStatus}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/etNoteBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@={task.body}"
                        android:gravity="start|top"
                        android:textStyle="normal"
                        android:layout_marginTop="@dimen/mid_margin"
                        android:ems="10"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</layout>