<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/navigation"
            app:startDestination="@id/homeFragment">
    
    <fragment android:id="@+id/homeFragment"
              android:name="com.example.android.todo.fragments.HomeFragment"
              android:label="home_fragment"
              tools:layout="@layout/home_fragment">
        <action android:id="@+id/action_homeFragment_to_taskDetailsFragment" app:destination="@id/taskDetailsFragment"/>
        <action android:id="@+id/action_homeFragment_to_addUpdateFragment" app:destination="@id/UpdateFragment"/>
        <action android:id="@+id/action_homeFragment_to_addFragment" app:destination="@id/addFragment"/>
    </fragment>
    <fragment android:id="@+id/UpdateFragment" android:name="com.example.android.todo.fragments.UpdateFragment"
              android:label="update_fragment">
        <argument android:name="taskId" app:argType="integer"/>
        <action android:id="@+id/action_addUpdateFragment_to_homeFragment" app:destination="@id/homeFragment"/>
    </fragment>
    <fragment android:id="@+id/taskDetailsFragment" android:name="com.example.android.todo.fragments.TaskDetailsFragment"
              android:label="task_details_fragment" tools:layout="@layout/task_details_fragment">
        <argument android:name="taskId" app:argType="integer"/>
    </fragment>
    <fragment android:id="@+id/addFragment" android:name="com.example.android.todo.fragments.AddFragment"
              android:label="add_fragment" tools:layout="@layout/add_fragment">
        <action android:id="@+id/action_addFragment_to_homeFragment" app:destination="@id/homeFragment"/>
    </fragment>
</navigation>